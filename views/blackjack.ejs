<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <title>Blackjack</title>
</head>
<body>
    <div class="container">
        <div class="title">
            <h1>Blackjack</h1>
        </div>

        <div class="hand-container">
            <h2>Dealer Hand</h2>
            <div class="hand-container">
                <div id="dealerHand" class="hand">
                    <% dealer.forEach((card, index) =>{ %>
                        <% if (index == 0) { %>
                            <img src="https://blog.betvictor.com/campaigns/the-art-of-playing-cards/assets/img/og_card_5@2x.png" alt="">
                        <% } else { %> 
                            <img src="<%= card.image %>" alt="<%= card.suit %><%= card.value%>">
                    <%  } %>
                    <% }) %>
                </div>

                <h2>Player Hand</h2>

                <div id="playerHand" class="hand">
                    <% player.forEach(card =>{ %>
                        <img src="<%= card.image %>" alt="<%= card.suit %><%= card.value%>">
                    <% }) %>
                </div>
            </div>
            <div class="buttons">
                <form action="/hit" method="POST">
                    <button value="hit">Hit</button>
                </form>
                <form action="/stay" method="POST">
                    <button value="stay">Stay</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>